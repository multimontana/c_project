{
  // Logging
  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          //"outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] [{SourceContext}] {Message}{NewLine}{Exception}",
          "outputTemplate": "{NewLine:1}{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}{NewLine:1}"

        }
      },
      {
        "Name": "File",
        "Args": {
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
          "path": "logs/log.json",
          "rollingInterval": "Day",
          "shared": true
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log.txt",
          "rollingInterval": "Day",
          "outputTemplate": "{NewLine:1}{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}{NewLine:1}"
          //"outputTemplate": "{NewLine:1} {Timestamp:G} {Message} {NewLine:1} {Exception:1}"
        }
      }

    ]
  },

  // Connection string
  "ConnectionStrings": {
    "DefaultConnection": "Server=45.132.17.92,1433;Database=demo;User Id=dev;password=Qwer20%;"
  },

  // Manager for JWTToken
  "tokenManagement": {
    "secret": "Replace this line with our own secret :))) sec_?><:A75",
    "issuer": "inframanager",
    "audience": "client.host",
    "accessExpiration": 30,
    "refreshExpiration": 60
  },
  "AllowedHosts": "*"
}